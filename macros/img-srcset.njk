	height="192"
	width="192"
	class="{{ class }}"
	src="//0.gravatar.com/avatar/{{ emailHash }}?s=192&d=retro&r=G"
	srcset="
			//0.gravatar.com/avatar/{{ emailHash }}?s=576&d=retro&r=G 576w,
			//0.gravatar.com/avatar/{{ emailHash }}?s=384&d=retro&r=G 384w,
			//0.gravatar.com/avatar/{{ emailHash }}?s=288&d=retro&r=G 288w,
			//0.gravatar.com/avatar/{{ emailHash }}?s=240&d=retro&r=G 240w,
			//0.gravatar.com/avatar/{{ emailHash }}?s=192&d=retro&r=G 192w
