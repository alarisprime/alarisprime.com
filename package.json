{
  "name": "alarisprime.com",
  "version": "3.0.0",
  "description": "The website for Alaris Prime LLC",
  "private": true,
  "scripts": {
    "clean": "rimraf dist .tmp",
    "preserve": "npm run clean",
    "serve": "npm-run-all --parallel server watch:*",
    "watch:html": "watch 'npm run build:html' ./pages ./layouts ./includes ./macros",
    "watch:js": "npm run build:js -- --watch",
    "watch:css": "npm-run-all build:css --parallel 'postbuild:css -- -w' 'build:css -- -w -r'",
    "watch:images": "npm run build:images -- -w",
    "watch:root": "npm run build:root -- -w",
    "watch:jslint": "watch 'npm run lint:js' ./scripts",
    "watch:scsslint": "watch 'npm run lint:scss -- -q' ./scss",
    "lint": "npm-run-all lint:js lint:scss",
    "lint:js": "xo ./scripts/**/*.js",
    "lint:scss": "sass-lint -v",
    "prebuild": "npm run clean",
    "build": "npm-run-all clean --parallel build:*",
    "build:html": "metalsmith",
    "build:css": "node-sass --include-path ./node_modules --source-map-embed ./scss -o ./.tmp/css",
    "postbuild:css": "postcss -c ./postcss.config.json -o ./dist/css/bundle.css .tmp/css/bundle.css",
    "build:js": "webpack",
    "build:images": "cpx 'images/**' dist/images/",
    "build:root": "cpx 'root/**' dist",
    "server": "browser-sync start --server 'dist' --files 'dist'",
    "predeploy": "npm run build",
    "deploy": "s3_website push"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/alarisprime/alarisprime.git"
  },
  "contributors": [
    "Saneef Ansari <s@alarisprime.com> (https://saneef.com/)",
    "Brajeshwar Oinam <b@alarisprime.com> (https://brajeshwar.me/)"
  ],
  "license": "UNLICENSED",
  "homepage": "https://alarisprime.com",
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "bourbon": "4.2.7",
    "bourbon-neat": "1.7.4",
    "browser-sync": "2.12.3",
    "cpx": "1.3.1",
    "metalsmith": "2.1.0",
    "metalsmith-define": "2.0.1",
    "metalsmith-in-place": "1.4.3",
    "metalsmith-permalinks": "0.5.0",
    "node-sass": "3.4.2",
    "npm-run-all": "1.7.0",
    "nunjucks": "2.4.2",
    "postcss-cli": "^2.5.2",
    "rimraf": "2.5.2",
    "sanitize.css": "3.3.0",
    "sass-lint": "1.5.1",
    "watch": "0.17.1",
    "webfontloader": "1.6.24",
    "webpack": "1.13.0",
    "xo": "0.14.0"
  }
}
