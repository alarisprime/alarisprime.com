---
title: Contact
---

{% extends "./layouts/base.njk" %}

{% from "./macros/contact-form.njk" import contactForm %}
{% from "./macros/divider.njk" import divider %}

{% block content %}
<article class="article">
	<div class="article__inner">
		<div class="article__header">
			<h1 class="article__title">Contact</h1>
		</div>
		<div class="article__content article__content--column">
			<p>You can email to us on <a class="link link--minor" href="mailto:{{site.contactEmail}}">{{site.contactEmail}}</a>.</p>
		</div>
	</div>
</article>
{{ divider() }}
{{ contactForm(
	pageIdentifier=title,
	email=site.contactEmail,
	newsletterSignupUrl=site.newsletterSignupUrl) }}

{% endblock %}
