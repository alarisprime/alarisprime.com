{% macro contactForm(pageIdentifier='', email, title='Write to Us', successUrl, fullWidth = false, newsletterSignupUrl, isDiscardable = false) %}
{% set classNames = '' %}
{% if fullWidth %}
{% set classNames = 'article--full-width' %}
{% endif %}
<article class="article {{ classNames }}">
	<form class="form" id="contact-form"
		action="https://formspree.io/{{ email }}"
		method="POST">
		<div class="article__inner">
			<div class="article__header">
				<h1 class="article__title">{{ title }}</h1>
			</div>
			<div class="article__content article__content--column">
				<div class="form__group">
					<label class="input-label" for="contact-form-name">Name</label>
					<input class="input-control" type="text" name="name" id="contact-form-name" required>
				</div>
				<div class="form__group">
					<label class="input-label" for="contact-form-email">Email</label>
					<input class="input-control" type="email" name="email" id="contact-form-email" required>
				</div>
				<div class="form__group">
					<label class="input-label" for="contact-form-subject">Subject</label>
					<input class="input-control" type="text" name="subject" id="contact-form-subject" required>
				</div>
				<div class="form__group">
					<label class="input-label" for="contact-form-message">Message</label>
					<textarea class="input-textarea" name="message" id="contact-form-message" required>Hello,

Iâ€™m interested in ______.
How do we proceed?

Best
__Your Name__</textarea>
				</div>
				<div class="form__group form__group--hidden js-form-group-discount-coupon">
					<label class="input-label" for="contact-form-discount-coupon">Coupon</label>
					<input class="input-control" type="text" name="discount-coupon" id="contact-form-discount-coupon">
				</div>
			</div>
			<div class="article__footer">
				<input type="text" name="_gotcha" style="display:none" />
				<input type="hidden" name="page-identifier" style="display:none" value="{{pageIdentifier}}" />
				<input type="hidden" name="_next" value="{{ successUrl }}" />
				<input class="button button--primary" type="submit" value="Send the message">
				{% if isDiscardable %}
				<a href="javascript:;" class="button js-overlay-close">Discard</a>
				{% endif %}
			</div>
		</div>
	</form>
</article>
{% endmacro %}
